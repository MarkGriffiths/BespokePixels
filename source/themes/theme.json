	{
		"class": "panel_button_control",
		"layer0.opacity": 1.0,
		"layer0.tint": [74, 74, 37]
	},
	{
		"class": "panel_button_control",
		"attributes": ["hover"],
		"layer0.tint": [204, 157, 21]
	},

