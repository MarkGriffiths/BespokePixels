/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Code Folding Buttons                                                       │
 *///──────────────────────────────────────────────────────────────────────────╯

	{
		"class": "fold_button_control",
		"layer0.opacity": { "target": 0.0, "speed": 2.0, "interpolation": "smoothstep" },
		"layer0.tint": [74, 74, 37, 128],
		"layer0.texture": "Theme - BespokePixels/media/fold-bg.png",
		"layer1.texture": "Theme - BespokePixels/media/fold-closed.png",
		"layer1.tint": [255, 0, 0, 160],
		"layer1.opacity": 1.0,
		"content_margin": [12, 8]
	},
	{
		"class": "fold_button_control",
		"attributes": ["pressed"],
		"layer1.texture": "Theme - BespokePixels/media/fold-open.png",
		"layer1.tint": [128, 255, 0, 160]
	},
	{
		"class": "fold_button_control",
		"attributes": ["expanded"],
		"layer1.texture": "Theme - BespokePixels/media/fold-open.png",
		"layer1.tint": [255, 255, 128, 160]
	},
	{
		"class": "fold_button_control",
		"attributes": ["pressed", "expanded"],
		"layer1.texture": "Theme - BespokePixels/media/fold-closed.png",
		"layer1.tint": [255, 128, 0, 160]
	},
	{
		"class": "fold_button_control",
		"attributes": ["hover"],
		"layer0.opacity": 1.0
	},

/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Standard Scrollbars                                                        │
 *///──────────────────────────────────────────────────────────────────────────╯

	// Standard scroll bar
	{
		"class": "scroll_bar_control",
		"layer0.texture": "",
		"layer0.tint": [38, 38, 26],
		"layer0.opacity": 1,
		"blur": false
	},

	// Standard scroll bar corner
	{
		"class": "scroll_corner_control",
		"layer0.tint": [38, 38, 26],
		"layer0.opacity": 1
	},

	// Standard scroll puck
	{
		"class": "puck_control",
		"layer0.tint": [74, 74, 37],
		"layer0.opacity": 0.6,
		"content_margin": [5, 0],
		"blur": false
	},

	// Standard horizontal scroll puck
	{
		"class": "puck_control",
		"attributes": ["horizontal"],
		"content_margin": [0, 5]
	},

/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Overlay Scrollbars                                                         │
 *///──────────────────────────────────────────────────────────────────────────╯

	// Overlay toggle scroll bar
	{
		"class": "scroll_area_control",
		"settings": ["overlay_scroll_bars"],
		"overlay": true
	},
	{
		"class": "scroll_area_control",
		"settings": ["!overlay_scroll_bars"],
		"overlay": false
	},

	// Overlay scroll bar
	{
		"class": "scroll_bar_control",
		"settings": ["overlay_scroll_bars"],
		"layer0.opacity": 0.6,
		"blur": true
	},

	// Overlay vertical puck
	{
		"class": "puck_control",
		"settings": ["overlay_scroll_bars"],
		"content_margin": [3, 0],
		"blur": true
	},

	// Overlay horizontal puck
	{
		"class": "puck_control",
		"settings": ["overlay_scroll_bars"],
		"attributes": ["horizontal"],
		"content_margin": [0, 3],
		"blur": true
	},

	// Overlay light puck (for dark content)
	{
		"class": "puck_control",
		"settings": ["overlay_scroll_bars"],
		"attributes": ["dark"],
		"layer0.tint": [128, 128, 65]
	},

/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Mini Map                                                                   │
 *///──────────────────────────────────────────────────────────────────────────╯
	{
	  "class": "minimap_control",
	  "settings": ["always_show_minimap_viewport"],
	  "viewport_color": [178, 178, 124, 64],
	  "viewport_opacity": { "target": 0.4, "speed": 1.0, "interpolation": "smoothstep" }
	},
	{
	  "class": "minimap_control",
	  "attributes": ["hover"],
	  "settings": ["always_show_minimap_viewport"],
	  "viewport_opacity": { "target": 0.6, "speed": 1.0, "interpolation": "smoothstep" }
	},
	{
	  "class": "minimap_control",
	  "settings": ["!always_show_minimap_viewport"],
	  "viewport_color": [178, 178, 124, 64],
	  "viewport_opacity": { "target": 0.0, "speed": 1.0, "interpolation": "smoothstep" }
	},
	{
	  "class": "minimap_control",
	  "attributes": ["hover"],
	  "settings": ["!always_show_minimap_viewport"],
	  "viewport_opacity": { "target": 0.4, "speed": 4.0, "interpolation": "smoothstep" }
	},

/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Labels                                                                     │
 *///──────────────────────────────────────────────────────────────────────────╯

	// General labels
	{
		"class": "label_control",
		"font.face": "InputSansNarrow Light",
		"color": [128, 128, 90],
		"shadow_color": [255, 255, 255, 0],
		"shadow_offset": [0, 0]
	},

	// Text field labels
	{
		"class": "label_control",
		"parents": [{"class": "panel_control"}]
	},

	// Button labels
	{
		"class": "label_control",
		"parents": [{"class": "button_control"}],
		"font.face": "Input Mono Narrow",
		"color": [128, 128, 90]
	},
	{
		"class": "label_control",
		"parents": [{"class": "button_control", "attributes": ["hover"]}],
		"color": [204, 157, 21]
	},
	{
		"class": "label_control",
		"parents": [{"class": "button_control", "attributes": ["pressed"]}],
		"color": [204, 204, 103]
	},

/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Tooltip                                                                    │
 *///──────────────────────────────────────────────────────────────────────────╯

	// Tooltip container
	{
		"class": "tool_tip_control",
		"layer0.tint": [38, 38, 26], // 02
		"layer0.inner_margin": [2,2],
		"layer0.opacity": 1,
		"content_margin": [4,4]
	},
	// Tooltip content
	{
		"class": "tool_tip_label_control",
		"font.face": "InputSansCondensed Light",
		"color": [248, 248, 223]
	},

/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Status Bar                                                                 │
 *///──────────────────────────────────────────────────────────────────────────╯

	// Status bar container
	{
		"class": "status_container",
		"content_margin": [4, 5, 0, 4]
	},
	{
		"class": "status_bar",
		"layer0.tint": [38, 38, 26],
		"layer0.opacity": 1,
		"layer1.tint": [20, 20, 14],
		"layer1.opacity": 1,
		"layer1.draw_center": false,
		"layer1.inner_margin": [0, 1, 0, 0],
		"content_margin": [8, 0, 0, 0]

	},

	// Status bar button
	{
		"class": "status_button",
		"min_size": [48, 20],
		"layer0.tint": [20, 20, 14],
		"layer0.opacity": 1,
		"layer0.draw_center": false,
		"layer0.inner_margin": [1, 0, 0, 0],
		"layer1.tint": [74, 74, 37],
		"layer1.opacity": { "target": 0.0, "speed": 1.0, "interpolation": "smoothstep" },
		"layer1.inner_margin": [1, 0, 0, 0],
		"content_margin": [8, 5, 8, 4]
	},
	{
		"class": "status_button",
		"attributes": ["pressed"],
		"layer1.opacity": 0.5
	},
	{
		"class": "status_button",
		"attributes": ["hover"],
		"layer1.opacity": { "target": 0.5, "speed": 5.0, "interpolation": "smoothstep" }
	},
