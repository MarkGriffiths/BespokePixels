/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Standard Text Buttons                                                      │
 *///──────────────────────────────────────────────────────────────────────────╯

	// Default button state
	{
		"class": "button_control",
		"content_margin": [0, 4],
		"min_size": [120, 18],
		"layer0.opacity": 1.0,
		"layer0.tint": [96, 96, 48],
		"layer1.opacity": { "target": 1.0, "speed": 5.0, "interpolation": "smoothstep" },
		"layer1.tint": [74, 74, 37],
		"layer2.opacity": { "target": 1.0, "speed": 3.0, "interpolation": "smoothstep" },
		"layer2.tint": [52, 52, 36]

	},

	// Pressed button state
	{
		"class": "button_control",
		"attributes": ["pressed"],
		"layer2.opacity": 0,
		"layer1.opacity": 0
	},

	// Hover button state
	{
		"class": "button_control",
		"attributes": ["hover"],
		"layer2.opacity": { "target": 0.0, "speed": 3.0, "interpolation": "smoothstep" }
	},
	{
		"class": "button_control",
		"attributes": ["pressed", "hover"],
		"layer2.opacity": 0
	},
