/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Mini Map                                                                   │
 *///──────────────────────────────────────────────────────────────────────────╯
	{
	  "class": "minimap_control",
	  "settings": ["always_show_minimap_viewport"],
	  "viewport_color": ${palette.ui.minimap.rgb},
	  "viewport_opacity": { "target": 0.1, "speed": 1.0, "interpolation": "smoothstep" }
	},
	{
	  "class": "minimap_control",
	  "attributes": ["hover"],
	  "settings": ["always_show_minimap_viewport"],
	  "viewport_opacity": { "target": 0.2, "speed": 1.0, "interpolation": "smoothstep" }
	},
	{
	  "class": "minimap_control",
	  "settings": ["!always_show_minimap_viewport"],
	  "viewport_color": ${palette.ui.minimap.rgb},
	  "viewport_opacity": { "target": 0.0, "speed": 1.0, "interpolation": "smoothstep" }
	},
	{
	  "class": "minimap_control",
	  "attributes": ["hover"],
	  "settings": ["!always_show_minimap_viewport"],
	  "viewport_opacity": { "target": 0.2, "speed": 4.0, "interpolation": "smoothstep" }
	},
