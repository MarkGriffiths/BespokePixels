/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Tab Lables                                                                 │
 *///──────────────────────────────────────────────────────────────────────────╯

    {
        "class": "tab_label",
        "font.face": "InputSansCondensed Light",
        "fg": ${palette.ui.tab_label.rgb},
        "shadow_color": [0, 0, 0, 40],
        "shadow_offset": [0, 1],
        "font.size": 12.0
    },
    {
        "class": "tab_label",
        "parents": [{"class": "tab_control","attributes": ["hover"]}],
        "fg": ${palette.ui.tab_label_hover.rgb}
    },
    {
        "class": "tab_label",
        "parents": [{"class": "tab_control","attributes": ["selected"]}],
        "fg": ${palette.ui.tab_label_selected.rgb},
        "font.face": "InputSansCondensed"
    },
    {
        "class": "tab_label",
        "attributes": ["transient"],
        "font.italic": true,
        "fg": ${palette.ui.tab_label_transient.rgb},
    },
