/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Panels                                                                     │
 *///──────────────────────────────────────────────────────────────────────────╯

	// Bottom panel background
	{
		"class": "panel_control",
		"layer0.opacity": 1,
		"layer0.tint": ${palette.ui.bottom_panel_background.rgb},
		"content_margin": [0, 0, 0, 0]
	},
	{
		"class": "panel_close_button",
		"layer0.texture": "Theme - BespokePixels/media/close.png",
		"layer0.tint": ${palette.ui.bottom_panel_button_default.rgb},
		"layer0.opacity": 1,
		"layer1.texture": "Theme - BespokePixels/media/close.png",
		"layer1.opacity": 0.0,
		"layer1.tint": ${palette.ui.bottom_panel_button_hover.rgb},
		"content_margin": [8, 8] // 8,8 to show
	},
	{
	"class": "panel_close_button",
		"attributes": ["hover"],
		"layer0.opacity": 0.0,
		"layer1.opacity": 1.0
	},
	// Command panel
	{
		"class": "overlay_control",
		"layer0.opacity": 1,
		"layer1.tint": ${palette.ui.command_panel_background.rgb},
		"layer1.opacity": 1,
		"content_margin": [2, 2, 2, 2]
	},
	{
		"class": "mini_quick_panel_row",
		"layer0.tint": ${palette.ui.command_panel_row.rgb},
		"layer0.opacity": 1,
		"layer1.tint": ${palette.ui.command_panel_row_selected.rgb},
		"layer1.opacity": { "target": 0.0, "speed": 8.0, "interpolation": "smoothstep" },
		"layer2.tint": ${palette.ui.command_panel_background.rgb},
		"layer2.opacity": 1,
		"layer2.inner_margin": [0, 0, 0, 1],
		"layer2.draw_center": false
	},
	{
		"class": "mini_quick_panel_row",
		"attributes": ["selected"],
		"layer1.opacity": 1
	},
