/* ─────────────────────────────────────────────────────────────────────────///╮
 *  Code Folding Buttons                                                       │
 *///──────────────────────────────────────────────────────────────────────────╯

	{
		"class": "fold_button_control",
		"layer0.opacity": { "target": 0.0, "speed": 2.0, "interpolation": "smoothstep" },
		"layer0.tint": ${palette.ui.fold_button_background.rgb},
		"layer0.texture": "Theme - BespokePixels/media/fold-bg.png",
		"layer1.texture": "Theme - BespokePixels/media/fold-closed.png",
		"layer1.tint": ${palette.ui.fold_button_closed.rgb},
		"layer1.opacity": 1.0,
		"content_margin": [12, 8]
	},
	{
		"class": "fold_button_control",
		"attributes": ["pressed"],
		"layer1.texture": "Theme - BespokePixels/media/fold-open.png",
		"layer1.tint": ${palette.ui.fold_button_pressed.rgb}
	},
	{
		"class": "fold_button_control",
		"attributes": ["expanded"],
		"layer1.texture": "Theme - BespokePixels/media/fold-open.png",
		"layer1.tint": ${palette.ui.fold_button_expanded.rgb}
	},
	{
		"class": "fold_button_control",
		"attributes": ["pressed", "expanded"],
		"layer1.texture": "Theme - BespokePixels/media/fold-closed.png",
		"layer1.tint": ${palette.ui.fold_button_expanded_pressed.rgb}
	},
	{
		"class": "fold_button_control",
		"attributes": ["hover"],
		"layer0.opacity": 1.0
	},
